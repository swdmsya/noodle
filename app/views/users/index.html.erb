<div id="index">
  <!-- headerバー -->
  <!-- <nav class="navbar navbar-default "> -->
    <div class="container-fluid header-height">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <%= image_tag "logo.png", size: "70x70" %>
        </a>
      </div>
      <div class="collapse navbar-collapse" id="navbarEexample3">
        <form class="navbar-form kensaku" role="search">
          <div class="form-group">
            <input type="text" class="form-control form-color" placeholder="場所">
          </div>
          <div class="form-group">
            <input type="text" class="form-control form-color" placeholder="ジャンル">
          </div>
          <div class="form-group">
             <input type="text" class="form-control form-color" placeholder="評価">
          </div>
          <button type="submit" class="btn btn-default">検索</button>
        </form>
        <a href="noodles/new" class="btn post-btn">POST noodle</a>
      </div>
    </div>
  <!-- </nav> -->
<div class="container main">
  <div class="row content">
    <!-- left-contents -->
    <div class="col-md-3 col-sm-3 col-xs-3">
      <% if user_signed_in?%>
      <div class="thumbnail profile">
          <%= image_tag current_user.avatar,:class => "icon" %>
        <div class="caption">
          <% @user ||= current_user %>
          <h3><%= @user.nickname%><span>さん</span></h3>
          <p><span>フォロー数：</span>
            <a href="<%= following_user_path(@user) %>">
              <strong id="following" class="stat">
                <%= @user.followings.count %>人
              </strong>
            </a>
          </p>
          <p><span>フォロワー数：</span>
            <a href="<%= followers_user_path(@user) %>">
              <strong id="followers" class="stat">
                <%= @user.followers.count %>人
              </strong>
            </a>
          </p>
          <p><a href="users/<%=current_user.id%>" class="btn  btns">マイページ</a>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete%></p>
        </div><!-- /.caption -->
      </div><!-- /.thumbnail -->
      <% else%>
      <div class="thumbnail profile">
          <%= image_tag "logo.png",:class => "icon" %>
        <div class="caption">
          <h3>ログインしてみましょう</h3>
          <p><%= link_to "新規登録", new_user_registration_path %>
             <%= link_to "ログイン", user_session_path, method: :post %></p>
        </div><!-- /.caption -->
      </div><!-- /.thumbnail -->
      <%end%>
      <!-- 画面幅が991pxいかになったらプロフィールにしたに表示-->
      <div class="min_rank">
        <ul class="list-group list-rank">
          <li class="list-group-item title">ランキング</li>
          <li class="list-group-item">
            <%= image_tag 'jirou.png', class: 'ranking-ime'%>
              <h2 class="ramen-image-title">{{ １位 }}</h2>
          </li>
          <li class="list-group-item">２位</li>
          <li class="list-group-item">３位</li>
          <li class="list-group-item">４位</li>
          <li class="list-group-item">５位</li>
        </ul>
      </div>
    </div>
    <!-- senter-contents -->
      <div class="col-md-6 col-sm-9 col-xs-9">
        <% @posts.each do |post| %>
          <%= render partial: "post", locals: { post: post } %>
        <% end %>
      </div>
<!-- 画面幅が991px以上になったら右側に表示　-->
    <div class="col-md-3  rank">
      <ul class="list-group list-rank">
        <li class="list-group-item title">ランキング</li>
        <li class="list-group-item">
           <%= image_tag 'jirou.png', class: 'ranking-ime'%>
            <h2 class="ramen-image-title">{{ １位 }}</h2>
        </li>
        <li class="list-group-item">２位</li>
        <li class="list-group-item">３位</li>
        <li class="list-group-item">４位</li>
        <li class="list-group-item">５位</li>
      </ul>
    </div>

  </div>
</div>